/* components/card/card.wxss */

.background {
  width: 100%;
  height: 100%;
  position: fixed;
  background-size: 100% 100%;
  z-index: -1;
}

.card {
  height: 200px;
  width: 85vw;
  background-position: center center;
  background-repeat: no-repeat;
  background-size: cover;
  display: block;
  /* padding: 0.5rem 1rem 0.5rem 1rem; */
  position: relative;
  border-radius: 1rem;
  overflow: hidden;
  margin: 1rem 0 1rem 0;
}

.title {
 font-size: 2rem;
 color: white; 
 text-align: center;
 padding: 0.5rem 0 0.5rem 0;
 z-index: 2;
}

.content {
  color: lightgray;
  z-index: 2;
  padding: 0rem 1rem 0 1rem;
}

.overlay {
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.5);
  position: absolute;
}
.container {
  position: relative;
  width: 100%;
  height: 100%;
}