/* components/section/section.wxss */

.section-name {
  color: gray;
  font-size: 16px;
  text-align: left;
  margin-left: 1rem;
}

.content {
  margin-top: 0.3rem;
  background-color: rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-left: none;
  border-right: none;
}

.section {
  margin-top: 1rem;
  margin-bottom: 1rem;
  width: 100%;
}